<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.csdn" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/it"
        android:label="@string/app_name"
        android:name="com.example.administrator.application.BaseApplication"
      >
        <activity
            android:name="com.example.administrator.activity.SelectActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.administrator.activity.MainActivity"
            android:theme="@android:style/Theme.NoTitleBar"/>
        <activity android:name="com.example.administrator.activity.NewsContentActivity"/>
        <activity android:name="com.example.administrator.activity.FirstActivity"/>
        <activity android:name="com.example.administrator.activity.ImageShowActivity"/>
        <activity android:name="com.example.administrator.activity.SubjectsActivity"/>
    </application>

</manifest>
